              "raw": "{\n  \"recipientId\": \"customer@example.com\",\n  \"channelId\": \"{{channelId}}\",\n  \"templateName\": \"welcome_email\",\n  \"data\": {\n    \"name\": \"John Doe\",\n    \"message\": \"Welcome to our service!\"\n  },\n  \"idempotencyKey\": \"unique-key-{{$timestamp}}\"\n}"
            },
