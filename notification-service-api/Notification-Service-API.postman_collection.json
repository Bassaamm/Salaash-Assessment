              "raw": "{\n  \"name\": \"Primary Email Channel\",\n  \"type\": \"email\",\n  \"configuration\": {\n    \"host\": \"localhost\",\n    \"port\": 1025,\n    \"secure\": false,\n    \"from\": \"noreply@example.com\"\n  },\n  \"description\": \"Mailpit SMTP for development\",\n  \"isActive\": true\n}"
